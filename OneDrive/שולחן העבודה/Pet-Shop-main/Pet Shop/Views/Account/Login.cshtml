@model Pet_Shop.Models.User

@{
    ViewData["Title"] = "Login";
}

<form method="post" enctype="multipart/form-data" asp-controller="Account" asp-action="Login">
    <div class="container mt-5">
        <h1 class="heading">Login</h1>
        <div class="row justify-content-center">
            <div class="col-sm-8">
                <div class="card">
                    <div class="card-body">
                        @Html.ValidationSummary(false, "", new { @class = "text-danger"})
                        <h4 class="text-danger">@ViewData["FileMessage"]</h4>
                        <div class="col-md-12">
                            <label class="form-label" for="name">Username</label>
                            <input asp-for="@Model.Username" type="text" class="form-control" id="name" />
                            <span class="text-danger" asp-validation-for="@Model.Username"></span>
                        </div>
                        <div class="form-group">
                            <label class="form-label" for="age">Password</label>
                            <input asp-for="@Model.Password" type="password" class="form-control" id="age" />
                            <span class="text-danger" asp-validation-for="@Model.Password"></span>
                        </div>
                        <button type="submit" class="btn btn-primary edit-btn">Login</button>

                    </div>
                </div>
            </div>
        </div>
    </div>

</form>

