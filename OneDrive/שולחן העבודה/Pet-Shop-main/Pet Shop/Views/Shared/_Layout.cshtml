@using Microsoft.AspNetCore.Identity
@using System.Security.Claims
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <!--Bootstarp CDN Links-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>
    <!--Css-->
    <link href="~/Styles/Animations.css" rel="stylesheet" type="text/css" media="screen" runat="server" />
    <link href="~/Styles/Responsive.css" rel="stylesheet" type="text/css" media="screen" runat="server" />
    <link href="/Styles/style.css" rel="stylesheet" type="text/css" media="screen" runat="server" />
    <!--Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Quicksand&family=Source+Serif+Pro&family=Trocchi&display=swap" rel="stylesheet" type="text/css" />
    <!-- jquery scripts -->
    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/jquery-validate/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/DropBoxJs.js"></script>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark " style="background-color: #181d50; color: #ff731d">
        <div class="container">
            <a class="navbar-brand nav-link" asp-controller="Home" asp-action="Index">Pet Shop</a>
            <button class="navbar-toggler" data-bs-toggle="collapse" data-bs-target="#navbar">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbar">
                <ul class="navbar-nav">
                    @if (User.Identity!.IsAuthenticated)
                    {
                        <li class="nav-item">
                            <a class="nav-link mx-2" asp-controller="Home" asp-action="Index">Hello @User.Identity?.Name</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link mx-2" asp-controller="Account" asp-action="Logout">Logout</a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link mx-2" asp-controller="Account" asp-action="Register">Register</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link mx-2" asp-controller="Account" asp-action="Login">Login</a>
                        </li>
                    }
                </ul>
                <ul class="navbar-nav ms-auto align-items-center">
                    <li class="nav-item">
                        <a class="nav-link mx-2" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link mx-2" asp-controller="Catalog" asp-action="Index">Catalog</a>
                    </li>
                    @if (User.Identity!.IsAuthenticated)
                    {
                        <li class="nav-item">
                            <a class="nav-link mx-2" asp-controller="Administrator" asp-action="Index">Administrator</a>
                        </li>

                    }
                </ul>
            </div>
        </div>
    </nav>
    <div>
        @RenderBody()
    </div>
</body>
</html>
